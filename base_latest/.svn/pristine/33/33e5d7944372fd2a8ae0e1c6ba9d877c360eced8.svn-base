---
#update overlay2

- name: copy elrepo-kernel-pri.repo
  copy:
    src: elrepo-kernel-pri.repo
    dest: /etc/yum.repos.d/elrepo-kernel-pri.repo
    owner: root
    group: root
    mode: 0644
    backup: yes

- name: import the key
  shell: rpm --import http://10.45.67.133/centos/7/kernel/RPM-GPG-KEY-elrepo.org

- name: update the kernel
  shell: yum --enablerepo=zcm-elrepo-kernel install  kernel-lt.x86_64 kernel-lt-devel.x86_64 -y 

- name:  adjust the sequence
  shell: grub2-set-default 0

- name: mkdir pwd
  shell: mkdir -p /etc/systemd/system/docker.service.d

- name: copy override.conf
  copy:
    src: override.conf
    dest: /etc/systemd/system/docker.service.d/override.conf
    owner: root
    group: root
    mode: 0644
    backup: yes
